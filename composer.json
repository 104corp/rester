{
    "name": "104corp/rester",
    "description": "A library for calling REST API.",
    "type": "library",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/104corp/php-rester/issues"
    },
    "require": {
        "php": "^8.0",
        "104corp/support": "^1.2",
        "guzzlehttp/guzzle": "^6.5 | ^7.5",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.21",
        "laminas/laminas-diactoros": "^2.24",
        "mockery/mockery": "^1",
        "phpunit/phpunit": "^9.5",
        "slim/slim": "^3.9",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Corp104\\Rester\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
